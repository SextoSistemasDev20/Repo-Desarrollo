@model ProyectoIntegradorSexto.Models.ViewModelMateriaPrimaBuscar
@Styles.Render("~/Content/estilos.min.css?v=" + DateTime.Now)

@using (Html.BeginForm("GetDataRelacionEmpaque", "Postcosecha", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>
            Lista de Materia Prima:
            <input style="margin-bottom: 6px" type="submit" value="Buscar" id="Buscar" class="btn btn-default col-lg-offset-8 btn-color" />
            <a style="font-size: 14px" href="@Url.Action("CrearMateriaPrima", "MateriaPrima"/*, new { nuevo = true }*/)">
                @*true para saber si es nuevo o modificación*@
                <img class="ablink" src="~/Content/images/agregar.png" /> Insertar
            </a>
        </legend>

        <div class="form-horizontal">

            <div class="col-md-3">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control input-pequenio" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <br><br><br>
    </fieldset>
}

<table class="table table-hover" style="font-size: 8pt;" id="tablaPedidos">
    <thead>
        <tr>
            <th>1</th>
            <th>2</th>
            <th>3</th>
        </tr>
    </thead>
    

</table>
@if (Model.ListaMateriaPrima == null && Model.ListaMateriaPrima.Count == 0)
{
    <p>No hay registros</p>
}

@section Scripts {
    @*PARA QUE FUNCIONEN LOS DATA ANNOTATIONS*@
    @Scripts.Render("~/bundles/jqueryval?v=" + DateTime.Now)
}
